{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es3",
    "lib": [ "es2018" ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
